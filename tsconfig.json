{
  "compileOnSave": false,
  "compilerOptions": {
      "target": "es5",
      "module": "es6",
      "rootDir": "./src",
      "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "inlineSourceMap": false,
      "sourceMap": true,
      "noEmitOnError": false,
      "emitDecoratorMetadata": false,
      "experimentalDecorators": true,
      "noImplicitReturns": true,
      "noImplicitThis": false,
      "noImplicitUseStrict":false,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "strictNullChecks": true,
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
      "node_modules",
  ]
}
